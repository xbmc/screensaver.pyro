<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="screensaver.pyro"
  version="3.3.0"
  name="Pyro"
  provider-name="Team Kodi">
  <requires>@ADDON_DEPENDS@</requires>
  <extension
    point="xbmc.ui.screensaver"
    library_@PLATFORM@="@LIBRARY_FILENAME@"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="de_DE">Pyro Bildschirmschoner</summary>
    <summary lang="en_GB">Pyro screensaver</summary>
    <description lang="de_DE">Der Pyro-Bildschirmschoner simuliert ein Feuerwerk.</description>
    <description lang="en_GB">The pyro screensaver simulates fireworks.</description>
    <platform>@PLATFORM@</platform>
    <license>GPL-2.0-or-later</license>
    <source>https://github.com/xbmc/screensaver.pyro</source>
    <assets>
      <icon>resources/icon.png</icon>
      <fanart>resources/fanart.png</fanart>
      <screenshot>resources/screenshot-01.png</screenshot>
      <screenshot>resources/fanart.png</screenshot>
      <screenshot>resources/screenshot-02.png</screenshot>
    </assets>
  </extension>
</addon>
